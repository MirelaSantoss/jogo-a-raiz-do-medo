//EVENTO CRIAR:
mensagem_visivel = false;

//EVENTO ETAPA:
if (global.pause) exit;
if (instance_exists(Obj_personagem)) {
    var player = instance_find(Obj_personagem, 0);
    var dist = point_distance(x, y, player.x, player.y);
    mensagem_visivel = (dist < 80);
} else {
    mensagem_visivel = false;
}

//EVENTO DESENHAR:
draw_self();

if (mensagem_visivel) {
    draw_set_font(fnt_jogo); // fonte personalizada
    draw_set_halign(fa_center);
    draw_set_valign(fa_middle);
    draw_set_color(c_white);
    draw_text(x, y - 40, "Pressione [E] para ler");
}


if (mensagem_visivel) {
    draw_set_font(fnt_jogo); // fonte personalizada
    draw_set_halign(fa_center);
    draw_set_valign(fa_middle);
    draw_set_color(c_white);
    draw_text(x, y - 40, "Pressione [E] para ler");
}
